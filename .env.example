# HoYoLab Environment Variables
# Copy this file to .env and fill in your credentials
# .env is gitignored and will not be committed to version control

# HoYoLab Credentials for auto-login (required for Docker usage)
HOYO_USER=your_email_here
HOYO_PASSWORD=your_password_here

# Session data path (where hoyo_session_data.json is stored)
# If you use a custom SESSION_PATH, set it here
# SESSION_PATH=/Users/sixomac/SessionData

# Optional: Games to enable (default: all)
# HOYO_ENABLED_GAMES=gi,hsr,zzz

# Optional: Headless mode (default: true)
# HOYO_HEADLESS=true
